dot-loader.user-sidebar__contents--box-loading-init(ng-if='!pictList.items')

.col-md-12.col-sm-12.col-xs-12

  div(infinite-scroll='pictList.load()',infinite-scroll-distance='0')
    div(ng-repeat="pict in pictList.items")
      .row
        .col-sm-12
          .media.find__media
            a.pull-left(twitter-id-str="{{pict.postedBy.twitterIdStr}}", show-tweet="show-tweet")
              img.media-object.thumbnail-img.fade(ng-src='{{pict.postedBy.icon}}', img-preload="img-preload")
            .media-body
              h4.media-heading
                span.name {{pict.postedBy.name}}
                span.screen-name @{{pict.postedBy.screenName}}
              a.link(href='{{pict.postedBy.url}}', target='_blank') {{pict.postedBy.url}}
      .row.find__pict-tweet--container
        .col-md-12
          .find__pict-tweet--img__container.col-xs-6.col-sm-6.col-md-4.col-lg-3(ng-repeat="pictTweet in pict.pictTweetList | limitTo: 12")
            .find__pict-tweet--img(style="background-image: url('{{pictTweet.mediaUrl}}:small')", zoom-image="zoom-image", data-img-src="{{pictTweet.mediaUrl}}")

      .find__divider(ng-show="!$last")


    dot-loader.user-sidebar__contents--infinitescroll-message(ng-if='pictList.busy')
    .text-center.find--infinitescroll-message(ng-show='pictList.isLast') 終わりです